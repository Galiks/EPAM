@using Entity
@using UserAward.BLL.Interface
@using UserAward.Container
@using Ninject


@{
    Layout = null;
}

@{
    IUserLogic userLogic = NinjectCommon.Kernel.Get<IUserLogic>();
    if (IsPost)
    {
        try
        {
            string name = Request["name"];
            string email = Request["email"];
            string date = Request["date"];
            string password = Request["password"];
            WebImage photo = WebImage.GetImageFromRequest("image");
            byte[] userPhoto = photo.GetBytes();
            bool isRightOperation = userLogic.AddUser(name, date, email, password, userPhoto);
        }
        catch (Exception e)
        {
            <h1>ERROR! @e.Message</h1>
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form method="post" class="form-group" enctype="multipart/form-data">
        <p>Name</p><input type="text" id="name" name="name" />
        <p>Email</p><input type="text" id="email" name="email" />
        <p>Birthday</p><input type="date" id="date" name="date" />
        <p>Password</p><input type="password" id="password" name="password" />

        <p>Photo</p><input type="file" id="image" name="image" />
        <input type="submit" value="Create" />
    </form>
    <form action="~/User/Index">
        <button class="bg-primary">Cancel</button>
    </form>
</body>
</html>
