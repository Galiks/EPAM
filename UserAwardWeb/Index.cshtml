@{
    Layout = null;
}

@{ 
    double? result = null;
    double? a = null, 
        b = null;

    if (IsPost)
    {
        //TryParse
        a = double.Parse(Request["a"]);
        b = double.Parse(Request["b"]);

        result = a + b;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title></title>
</head>
<body>
    <div class="alert alert-primary">
        Result: 
        @{ 
            if (result == null)
            {
                <h3>undefined</h3>
            }
            else
            {
                @result
            }
        }
    </div>
    <form action="~/Result.cshtml" method="post">
        <div class="field">
            <label class="m-4" for="a">A : </label>
            <input type="text" name="a" id="a" value=@(a ?? 0) />
        </div>
        <div class="field">
            <label class="m-4" for="b">B : </label>
            <input type="text" name="b" id="b" value=@(b ?? 0) />
        </div>
        <button>Calculate</button>

        <button class="btn-danger" id="goto">Redirect</button>
        <script>
            $('#goto').click(function () {
                location.href("/redirect");
            })
        </script>
    </form>
</body>
</html>
