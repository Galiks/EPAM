@{
    Layout = null;
}

@{
    double? result = null;
    double? a = null,
        b = null;

    if (IsPost)
    {
        //TryParse
        a = double.Parse(Request["a"]);
        b = double.Parse(Request["b"]);

        result = a + b;
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="alert alert-primary">
        Result:
        @{
            if (result == null)
            {
                <h3>undefined</h3>
            }
            else
            {
                @result
            }
        }
    </div>
</body>
</html>
