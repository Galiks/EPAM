@using CalendarThematicPlan.Container;
@using CalendarThematicPlan.BLL.Interface;
@using Ninject

@{
    Layout = null;
}

@{
    IUserLogic userLogic = NinjectCommon.Kernel.Get<IUserLogic>();
    if (IsPost)
    {
        string id = Model.Id.ToString();

        try
        {
            userLogic.DeleteUser(id);

            Response.Redirect("~/User/Index");
        }
        catch (System.Data.SqlClient.SqlException e)
        {
            <div class="card-header">
                <h2>Пользователь является элементом расписания</h2>
            </div>
        }
        catch (Exception e)
        {
            <div class="card-header">
                <h2>@e.Message</h2>
            </div>
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
    {
        <div class="mb-5">
            <table class="border-dark" border="1">
                <tr>
                    <td>ID</td>
                    <td>Фамилия</td>
                    <td>Имя</td>
                    <td>Отчество</td>
                    <td>Должность</td>
                    <td>Фото</td>
                    <td>Доп действия (тест)</td>
                </tr>
                <tr class="align-middle">
                    <td>@Model.Id</td>
                    <td>@Model.LastName</td>
                    <td>@Model.FirstName</td>
                    <td>@Model.Patronymic</td>
                    <td>@Model.Position</td>
                    <td>
                        @if (Model.UserPhoto != null)
                        {
                            @Html.Raw("<img class='user-img' src=\"data:image/jpeg;base64,"
                          + Convert.ToBase64String(Model.UserPhoto) + "\" />")
                        }
                        else
                        {
                            <img style='width:80px; height:60px;' src="~/Images/user.jpg" />
                        }
                    </td>
                    <td>@Html.ActionLink("Details", "Details", new { idUser = Model.Id })</td>
                </tr>

            </table>
        </div>

        <div>
            <form method="post">
                <button>Удалить пользователя</button>
            </form>
        </div>
    }
    else
    {
        Html.RenderPartial("PartialAccessDenied");
    }
</body>
</html>
