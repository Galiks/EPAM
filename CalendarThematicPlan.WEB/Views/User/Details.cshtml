
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <table class="border-dark" border="1">
            <tr>
                <td>ID</td>
                <td>Фамилия</td>
                <td>Имя</td>
                <td>Отчество</td>
                <td>Должность</td>
                <td>Фото</td>
            </tr>

            <tr class="align-middle">
                <td>@Model.Id</td>
                <td>@Model.LastName</td>
                <td>@Model.FirstName</td>
                <td>@Model.Patronymic</td>
                <td>@Model.Position</td>
                <td>
                    @if (Model.UserPhoto != null)
                    {
                        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                 + Convert.ToBase64String(Model.UserPhoto) + "\" />")
                    }
                    else
                    {
                        <img style='width:80px; height:60px;' src="~/Images/user.jpg" />
                    }
                </td>
            </tr>
            
        </table>
    </div>
</body>
</html>
