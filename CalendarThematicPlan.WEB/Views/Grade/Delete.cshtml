@using CalendarThematicPlan.Container;
@using CalendarThematicPlan.BLL.Interface;
@using Ninject
@using System.Data.SqlClient

@{
    Layout = "~/Views/Shared/_Menu.cshtml";
}

@{
    IGradeLogic gradeLogic = NinjectCommon.Kernel.Get<IGradeLogic>();
    if (IsPost)
    {
        string id = Model.Id.ToString();

        try
        {
            gradeLogic.DeleteGrade(id);
            Response.Redirect("~/Grade/Index");
        }
        catch (System.Data.SqlClient.SqlException e)
        {
            <div class="card-header">
                <h2>Класс является элементом расписания</h2>
            </div>
        }
        catch (Exception e)
        {
            <div class="card-header">
                <h2>@e.Message</h2>
            </div>
        }
    }
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
    {
        <div class="mb-5">
            <table class="border-dark" border="1">
                <tr>
                    <td>ID</td>
                    <td>Номер</td>
                    <td>Буква</td>
                    <td>Детей в классе</td>
                </tr>
                <tr class="align-middle">
                    <td>@Model.Id</td>
                    <td>@Model.Number</td>
                    <td>@Model.Letter</td>
                    <td>@Model.KidsInClass</td>
                </tr>
            </table>
        </div>

        <div>
            <form method="post">
                <button>Удалить класс</button>
            </form>
        </div>
    }
    else
    {
        Html.RenderPartial("PartialAccessDenied");
    }
</body>
</html>
